{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ps-wiki.github.io/schema/v1/term.schema.json",
  "title": "PS-Wiki Term",
  "description": "Schema for a single power-systems wiki term. Lenient and API-ready.",
  "x-schema-version": "1.0.0",
  "x-changelog-url": "https://ps-wiki.github.io/schema/CHANGELOG.md",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "id",
    "title",
    "description",
    "language",
    "version",
    "breaking",
    "dates",
    "authors",
    "content"
  ],

  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:[a-z0-9-]*[a-z0-9])?$",
      "description": "Stable kebab-case id (also filename without .json)."
    },
    "title": { "type": "string", "minLength": 1 },

    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Short human blurb; also used as summary/snippet in API/search."
    },

    "language": {
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(?:-[A-Za-z0-9]{2,8})*$",
      "description": "BCP-47 tag; use 'en' for general English. Locale variants like 'en-GB' allowed."
    },

    "tags": {
      "type": "array",
      "description": "Topic tags; also used as keywords for search.",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true,
      "default": []
    },

    "related": {
      "type": "array",
      "description": "IDs of related terms.",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:[a-z0-9-]*[a-z0-9])?$"
      },
      "uniqueItems": true,
      "default": []
    },

    "aliases": {
      "type": "array",
      "description": "Alternative names/abbreviations (optional).",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },

    "version": { "type": "string", "minLength": 1 },
    "breaking": { "type": "boolean" },

    "status": {
      "type": "string",
      "enum": ["published", "draft", "deprecated"],
      "default": "published",
      "description": "Lifecycle marker; deprecated terms remain for history."
    },

    "license": {
      "type": "string",
      "description": "Optional per-term license. If absent, inherit repo license (e.g., CC-BY-NC-4.0)."
    },

    "dates": {
      "type": "object",
      "additionalProperties": false,
      "required": ["created", "last_modified"],
      "properties": {
        "created":       { "type": "string", "format": "date" },
        "last_modified": { "type": "string", "format": "date" },
        "first_published": { "type": ["string", "null"], "format": "date" }
      }
    },

    "authors": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Author" }
    },

    "content": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sections"],
      "properties": {
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Section" }
        }
      }
    }
  },

  "$defs": {
    "Author": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "url":  { "type": ["string", "null"], "format": "uri" }
      }
    },

    "Figure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path":        { "type": "string", "minLength": 1 },
        "caption_md":  { "type": ["string", "null"] },
        "alt":         { "type": ["string", "null"], "description": "Alt text (recommended, optional for now)." },
        "zoomable":    { "type": ["boolean", "null"], "default": false },
        "source_keys": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      }
    },

    "Section": {
      "type": "object",
      "additionalProperties": false,
      "required": ["order", "id", "title", "type", "body_md"],
      "properties": {
        "order": { "type": "integer", "minimum": 0 },
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:[a-z0-9-]*[a-z0-9])?$",
          "description": "Stable section id (kebab-case)."
        },
        "title": { "type": "string", "minLength": 1 },
        "type": {
          "type": "string",
          "description": "Extend as needed; these cover your current usage.",
          "enum": [
            "definition",
            "note",
            "example",
            "figure-block",
            "equation",
            "derivation",
            "table",
            "reference"
          ]
        },
        "source_keys": {
          "type": "array",
          "description": "Citations/keys from your bibliography system (optional overall).",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "page":    { "type": ["string", "null"] },
        "body_md": { "type": "string", "minLength": 1 },
        "figures": {
          "type": "array",
          "items": { "$ref": "#/$defs/Figure" }
        },
        "data": {
          "type": "object",
          "description": "Optional structured payload (tables, arrays, values).",
          "additionalProperties": true
        }
      }
    }
  }
}
